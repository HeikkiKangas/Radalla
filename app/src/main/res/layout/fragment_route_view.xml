<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView
        android:layout_marginLeft="13dp"
        android:id="@+id/originField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="From"
        android:completionThreshold="1"
        android:dropDownAnchor="@id/originField"
        android:imeOptions="actionSearch"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/swapButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spacer"/>

    <Button
        android:id="@+id/swapButton"
        style="@style/MaterialIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="swapDirection"
        app:icon="@drawable/ic_baseline_swap_horiz_30"
        app:layout_constraintEnd_toStartOf="@id/destinationField"
        app:layout_constraintStart_toEndOf="@id/originField"
        app:layout_constraintTop_toTopOf="parent"/>

    <AutoCompleteTextView
        android:id="@+id/destinationField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="To"
        android:imeOptions="actionSearch"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@id/searchButton"
        app:layout_constraintStart_toEndOf="@id/swapButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spacer"/>

    <Button
        android:id="@+id/searchButton"
        style="@style/MaterialIconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="search"
        app:icon="@drawable/ic_baseline_search_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/destinationField"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/swapButton"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/spacer" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>